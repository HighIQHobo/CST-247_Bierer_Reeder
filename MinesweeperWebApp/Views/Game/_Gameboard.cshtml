@model MinesweeperWebApp.GameEngine.MinesweeperGame

<style>
    .cell {
        background-color: lightgrey;
        width: 50px;
        height: 50px;
    }

        .cell:hover {
            background-color: gray;
        }

    .cell-clicked {
        background-color: darkgrey;
        width: 50px;
        height: 50px;
    }

    .cell-bomb {
        background-color: red;
        width: 50px;
        height: 50px;
    }
</style>

@for (int x = 0; x < Model.Length; x++)
{
    for (int y = 0; y < Model.Length; y++)
    {
        //generate a button for each Cell in TheGrid
        if (!Model.TheGrid[x, y].Visited)
        {
            <button type="submit" class="cell" name="cell" value="@Model.TheGrid[x, y].Row, @Model.TheGrid[x, y].Col"></button>
        }
        else if (Model.TheGrid[x, y].Visited && Model.TheGrid[x, y].IsLive)
        {
            <button type="submit" class="cell-bomb" name="cellVisited" value="@Model.TheGrid[x, y].Row, @Model.TheGrid[x, y].Col" disabled>
                <img src="~/Content/Images/Bomb.png" class="img-responsive" />
            </button>
        }
        else if (Model.TheGrid[x, y].Visited && !Model.TheGrid[x, y].IsLive)
        {
            <button type="submit" class="cell-clicked" name="cellVisited" value="@Model.TheGrid[x, y].Row, @Model.TheGrid[x, y].Col" disabled>
                <img src="~/Content/Images/@Model.TheGrid[x, y].LiveNeighbors).png" class="img-responsive" />
            </button>
        }

        //For button spacing
        if (y == 9)
        {
            <br />
        }
    }
}