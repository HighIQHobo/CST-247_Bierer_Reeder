@using MinesweeperWebApp.GameEngine
@model MinesweeperGame

@* Created by: William Bierer & Stuart Reeder *@

@{
    ViewBag.Title = "Game";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //Create AjaxOptions object for creating an Ajax form
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "gameBoard",
        OnSuccess = "ajaxSuccess"
    };
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Minesweeper</title>
    <style>
        .cell {
            background-color: lightgrey;
            width: 50px;
            height: 50px;
        }
        .cell:hover {
            background-color: gray;
        }
        .cell-clicked {
            background-color: darkgrey;
            width: 50px;
            height: 50px;
        }
        .cell-bomb {
            background-color: red;
            width: 50px;
            height: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="col-md-1" align="right">
            @using (Ajax.BeginForm("Restart", "Game", ajaxOptions, new { id = "restartForm" }))
            {
                if (Model.win || Model.lose)
                {
                    <button class="btn btn-default">Restart Game</button>
                }
            }
            <br />
            @using (Ajax.BeginForm("SaveGame", "Game", ajaxOptions, new { id = "boardForm" }))
            {
                <button type="submit" class="btn btn-default" name="Save" value="SaveCell">Save Game</button>
            }
            <br />
            @using (Ajax.BeginForm("LoadGame", "Game", ajaxOptions, new { id = "boardForm" }))
            {
                if (Model.isSaveGame)
                {
                    <button type="submit" class="btn btn-default" name="Load" value="LoadCell">Load Game</button>
                }
            }
        </div>
        <div class="col-md-9">
            @using (Ajax.BeginForm("CellClick", "Game", ajaxOptions, new { id = "boardForm" }))
            {
                <div align="center">@Model.message</div>
                <br />
                <p align="center">User ID: @Convert.ToInt32(Session["UserID"])</p>

                <div id="gameBoard" align="center">
                    @for (int x = 0; x < Model.Length; x++)
                    {
                        for (int y = 0; y < Model.Length; y++)
                        {
                            //generate a button for each Cell in TheGrid
                            if (!Model.TheGrid[x, y].Visited)
                            {
                                <button type="submit" class="cell" name="cell" value="@Model.TheGrid[x, y].Row, @Model.TheGrid[x, y].Col"></button>
                            }
                            else if (Model.TheGrid[x, y].Visited && Model.TheGrid[x, y].IsLive)
                            {
                                <button type="submit" class="cell-bomb" name="cellVisited" value="@Model.TheGrid[x, y].Row, @Model.TheGrid[x, y].Col" disabled>
                                    <img src="~/Content/Images/Bomb.png" class="img-responsive" />
                                </button>
                            }
                            else if (Model.TheGrid[x, y].Visited && !Model.TheGrid[x, y].IsLive)
                            {
                                <button type="submit" class="cell-clicked" name="cellVisited" value="@Model.TheGrid[x, y].Row, @Model.TheGrid[x, y].Col" disabled>
                                    <img src="~/Content/Images/@Model.TheGrid[x, y].LiveNeighbors).png" class="img-responsive" />
                                </button>
                            }

                            //For button spacing
                            if (y == 9)
                            {
                                <br />
                            }
                        }
                    }
                </div>
            }
        </div>
        <div class="col-md-1">

        </div>
    </div>
</body>
</html>